<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox fx:id="mainView" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fineasy.controllers.HelloController">
  <padding>
    <Insets bottom="40.0" left="100.0" right="100.0" top="40.0" />
  </padding>
    <children>
      <Label text="FinEasy">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="searchTextField" prefHeight="27.0" prefWidth="228.0" promptText="Input: Type/Category/Comment" />
            <Button mnemonicParsing="false" onAction="#handleSearchButtonAction" text="Search" />
         </children>
      </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Sort By" />
                <ComboBox fx:id="sortComboBox" prefWidth="150.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Amount" />
                            <String fx:value="Date" />
                            <String fx:value="Type" />
                            <String fx:value="Category" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="visualizationButton" onAction="#handleVisualizationButtonClick" style="-fx-background-color: orange; -fx-border-color: black;" text="Visualization â†’" />

            </children>
        </HBox>
        <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
                <TableColumn fx:id="commentColumn" prefWidth="100.0" text="Comment" />
            </columns>
        </TableView>
        <Button fx:id="addButton" onAction="#handleAddButtonClick" style="-fx-background-color: orange; -fx-border-color: black;" styleClass="floating-action-button" text="Add" />
        <Button fx:id="UndoButton" onAction="#handleUndoButtonClick" style="-fx-background-color: orange; -fx-border-color: black;" styleClass="floating-action-button" text="Undo" />
        <Button fx:id="deleteButton" onAction="#handleDeleteButtonClick" style="-fx-background-color: orange; -fx-border-color: black;" styleClass="floating-action-button" text="Delete" />
    </children>
</VBox>
